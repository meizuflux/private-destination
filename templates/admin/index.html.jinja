{% extends "admin/layout.html.jinja" %}

{% block title %}
    Admin Dashboard
{% endblock title %}

{% block main %}
    <h1 class="title">Hello</h1>
    <h2 class="subtitle mb-3">Welcome to the admin dashboard</h2>

    <div class="columns is-multiline">
        <div class="column is-4">
            <div class="box">
                <p class="title"><a href="{{ url_for('users.index') }}">Users</a></p>
                <p class="subtitle">There are {{counters["users"]}} users with {{counters["sessions"]}} active sessions</p>
            </div>
        </div>

        <div class="column is-4">
            <div class="box">
                <p class="title"><a>URL Shortener</a></p>
                <p class="subtitle">There are {{counters["urls"]}} shortened urls</p>
            </div>
        </div>

        <div class="column is-4">
            <div class="box">
                <p class="title"><a>Secure Notes</a></p>
                <p class="subtitle">There are {{counters["notes"]}} secure notes</p>
            </div>
        </div>

        <div class="column is-4">
            <div class="box">
                <p class="title"><a href="{{ url_for('application.index') }}">Application</a></p>
                <p class="subtitle">Currently running with {{stats["cpu_percent"]}}% CPU usage and {{stats["memory_percent"]}}% memory usage</p>
            </div>
        </div>
    </div>
{% endblock %}
