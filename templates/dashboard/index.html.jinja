{% extends "dashboard/layout.html.jinja" %}

{% block title %}
    Dashboard
{% endblock title %}

{% block main %}
    <h1 class="title">Hello</h1>
    <h2 class="subtitle mb-3">Welcome to the <code>mzf.one</code> dashboard</h2>

    <div class="columns is-multiline">
        <div class="column is-4">
            <article class="box">
                <p class="title"><a href="{{ url_for('shortener.index') }}">URL Shortener</a></p>
                <p class="subtitle">You have {{url_count}} shortened URLs</p>
            </article>
        </div>
        <div class="column is-4">
            <article class="box">
                <p class="title"><a href="{{ url_for('notes.index') }}">Secure Notes</a></p>
                <p class="subtitle">You have {{notes_count}} secure notes</p>
            </article>
        </div>
    </div>
{% endblock %}
