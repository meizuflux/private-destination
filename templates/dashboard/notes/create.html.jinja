{% extends 'dashboard/notes/layout.html.jinja' %}

{% block head %}
    <link rel="stylesheet" href="/static/css/textarea.css">
{% endblock head %}

{% block main2 %}
    <form method="POST">
        <div class="field">
            <label class="label">Name</label>
            <div class="control">
                <input class="input {{'is-danger' if errors.name else ''}}" type="text" placeholder="Name" name="name">
            </div>
            {% if errors.name %}
                <p class="help is-danger">{{errors.name[0]}}</p>
            {% else %}
                <p class="help">A name to describe the note</p>
            {% endif %}
        </div>
        <div class="field">
            <label class="label">Content</label>
            <div class="control">
                <textarea class="textarea {{'is-danger' if errors.content else ''}}" placeholder="Content" name="content" minlength="1" maxlength="5000"></textarea>
            </div>
            {% if errors.content %}
                <p class="help is-danger">{{errors.content[0]}}</p>
            {% else %}
                <p class="help">The text that you want to be seen</p>
            {% endif %}
        </div>
        <div class="field">
            <label class="label">Password (optional)</label>
            <div class="control">
                <input class="input" type="password" placeholder="Password" name="password" id="password">
            </div>
            <p class="help">This field is required if you want the content to be encrypted</p>
        </div>
        <div class="field">
            <div class="control">
                <label class="checkbox">
                    <input type="checkbox" id="show-password">
                    <span id="show-password-text">Show</span> Password
                </label>
            </div>
        </div>
        <div class="field">
            <label class="label">Options</label>
            <div class="control">
                <label class="checkbox" title="Your email will be displayed when viewing this note">
                    <input type="checkbox" checked name="share_email">
                    Share Email
                </label>
            </div>
            <div class="control">
                <label for="" class="checkbox" title="Only you will be able to access this note">
                    <input type="checkbox" name="private">
                    Private
                </label>
            </div>
            <p class="help">Hover for details</p>
        </div>
        <div class="field is-grouped">
            <div class="control">
                <button class="button is-info" type="submit">Create Secure Note</button>
            </div>
        </div>
    </form>

    <script src="/static/js/textarea.js"></script>
    <script src="/static/js/show-pw.js"></script>
{% endblock %}