{% extends 'dashboard/layout.html.jinja' %}

{% import "macros.html.jinja" as macros with context %}

{% block name %}
{% endblock name %}

{% block title %}
    {{self.name()}} Settings
{% endblock title %}

{% block main %}
    <div class="title mb-3">{{self.name()}} Settings</div>

    <div class="tabs mb-3">
        <ul>
            <li class="{{'is-active' if request.rel_url.path == url_for('settings.index') or request.rel_url.path.startswith(url_for('settings.account'))}}"><a href="{{ url_for('settings.index') }}">Account</a></li>
            {{macros.active_tab(url_for("settings.sessions"), "Sessions")}}
            {{macros.active_tab(url_for("settings.api_key"), "API Key")}}
            {{macros.active_tab(url_for("settings.shortener"), "URL Shortener")}}
            {{macros.active_tab(url_for("settings.invites"), "Invites")}}
        </ul>
    </div>

    {% block main2 %}
    {% endblock  %}
{% endblock  %}
